<div class="container question-page col-md-9">
    <form class="form question-form">
        <h5>First, the basics</h5>
        <input id="username" type="text" placeholder="username" aria-label="username" />
        <input id="email" type="email" placeholder="email adress" aria-label="email" />
        <input id="password" type="password" placeholder="password" aria-label="password" />
        <input id="confirm-password" type="password" placeholder="confirm password" aria-label="confirm password" />

        <button id="signup-btn">Submit</button>
    </form>
</div>

